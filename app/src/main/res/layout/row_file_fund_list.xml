<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    app:cardElevation="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"

    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:minWidth="100dp"
        android:text="Name : "/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewNameValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SBI fund"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewName"
        app:layout_constraintTop_toTopOf="@id/textViewName"
        app:layout_constraintBottom_toBottomOf="@id/textViewName"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewInvest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textViewName"
        android:minWidth="100dp"
        android:text="Invest : "/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewInvestValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="30000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewInvest"
        app:layout_constraintTop_toTopOf="@id/textViewInvest"
        app:layout_constraintBottom_toBottomOf="@id/textViewInvest"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textViewInvest"
        android:minWidth="100dp"
        android:text="Current : "/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewCurrentValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="30000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewCurrent"
        app:layout_constraintTop_toTopOf="@id/textViewCurrent"
        app:layout_constraintBottom_toBottomOf="@id/textViewCurrent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewROI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textViewCurrent"
        android:minWidth="100dp"
        android:text="ROI : "/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewROIValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="30000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewROI"
        app:layout_constraintTop_toTopOf="@id/textViewROI"
        app:layout_constraintBottom_toBottomOf="@id/textViewROI"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>